<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_reg_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/add_post_text"
        android:textColor="@android:color/black"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:layout_margin="10sp"
        android:orientation="vertical" >
        <Button
            android:id="@+id/btn_add_post_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Upload File"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_post_text_type"/>
        <Spinner
            android:id="@+id/spinner_choose_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_add_post_okay"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@color/colorPrimaryDark"
            android:clickable="true"
            android:text="Okay"
            android:textColor="#5DBCD2"
            android:textStyle="bold"
            android:layout_margin="10sp"/>
        <Button
            android:id="@+id/btn_add_post_cancel"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@color/colorPrimaryDark"
            android:clickable="true"
            android:text="Cancel"
            android:textColor="#5DBCD2"
            android:textStyle="bold"
            android:layout_margin="10sp"/>

    </LinearLayout>

</LinearLayout>

